; AND
{:id :and-i
 :given      [phi psi]
 :conclusion [(and phi psi)]}
{:id :and-e1
 :given      [(and phi psi)]
 :conclusion [phi]}
{:id :and-e2
 :given      [(and phi psi)]
 :conclusion [psi]}

; OR
{:id :or-i1
 :given      [phi]
 :conclusion [(or phi psi)]}
{:id :or-i2
 :given      [phi]
 :conclusion [(or psi phi)]}
{:id :or-e
 :given      [(or phi psi)
              (infer phi chi)
              (infer psi chi)]
 :conclusion [chi]}

; IMPL
{:id :impl-i
 :given      [(infer phi psi)]
 :conclusion [(impl phi psi)]}
{:id :impl-e
 :given      [(impl phi psi) phi]
 :conclusion [psi]}

; NOT
{:id :not-i
 :given      [(infer phi contradiction)]
 :conclusion [(not phi)]}
{:id :not-e
 :given      [(not phi) phi]
 :conclusion [contradiction]}

; RAA/EFQ
{:id :raa
 :given      [(infer (not phi) contradiction)]
 :conclusion [phi]}
{:id :efq
 :given      [contradiction]
 :conclusion [phi]}

; for constants truth and contradiction
{:id :truth
 :given []
 :conclusion [truth]}
{:id :contradiction
 :given [(not truth)]
 :conclusion [contradiction]}